@page "/"
@inherits IndexBase

<PageTitle>Taxi Nam Thắng Manager</PageTitle>

<MudMainContent Class="pa-5 augReFont">
    <MudContainer MaxWidth="MaxWidth.ExtraLarge">
        <MudGrid>
            <!-- Header Section -->
            <MudItem xs="12">
                <MudText Class="d-flex justify-center" Color="Color.Primary" Typo="Typo.h4">DANH SÁCH XE CHẠY NGÀY
                </MudText>
                <MudTextField @bind-Value="_searchString" Placeholder="Nhập khoản cách tìm kiếm" Adornment="Adornment.Start" Immediate="true"
                AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" TextChanged="@(HandleTextChanged)"></MudTextField>
            </MudItem>
            
            @foreach(var item in defaultContracts){
                <MudItem xs="12" md="3">
                    <MudCard>
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Color="Color.Primary" Typo="Typo.h6">HỢP ĐỒNG</MudText>
                            </CardHeaderContent>
                            <CardHeaderActions>
                                <MudIconButton Icon="@Icons.Material.Filled.MenuBook" Color="Color.Success" />
                            </CardHeaderActions>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText><b>Hợp đồng 1 chiều</b></MudText>
                            <MudText><b>Khoảng cách</b>: @item.dc_DistanceOne</MudText>
                            <MudText><b>Giá</b>: @item.dc_PriceOneFor5</MudText>
                            <MudText><b>Thời gian chờ</b>: @item.dc_Time</MudText>
                            <MudDivider Class="mt-3" />
                            <MudText><b>Hợp đồng 2 chiều</b></MudText>
                            <MudText><b>Khoảng cách</b>: @item.dc_DistanceTwo</MudText>
                            <MudText><b>Giá</b>: @item.dc_PriceOneFor7</MudText>
                            <MudText><b>Thời gian chờ</b>: @item.dc_TimeFor7</MudText>
                            <MudDivider Class="mt-3" />
                            <MudText>@item.dc_DecriptionFor4</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudSpacer />
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            } 
        </MudGrid>
    </MudContainer>
</MudMainContent>
