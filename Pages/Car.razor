@inherits CarBase
<MudTable Items="@Elements" Hover="true">
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Số hiệu</MudTh>
        <MudTh>Biển số</MudTh>
        <MudTh>Ngày tạo</MudTh>
        <MudTh>Người lái</MudTh>
        <MudTh>SĐT</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.car_Id</MudTd>
        <MudTd DataLabel="Số hiệu">@context.car_NumberId</MudTd>
        <MudTd DataLabel="Biển số">@context.car_NumberPlate</MudTd>
        <MudTd DataLabel="Ngày tạo">@context.car_CreatedAt.ToString("dd/mm/yyyy")</MudTd>
        <MudTd DataLabel="Người lái">@context.driver.driver_Name</MudTd>
        <MudTd DataLabel="SĐT">@context.driver.driver_Phone</MudTd>
    </RowTemplate>
</MudTable>