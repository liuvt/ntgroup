﻿<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(AppMainLayout)">
                <NotAuthorized>
                    <PageTitle>Không có quyền truy cập!</PageTitle>
                    <MessageError Title="Xin lỗi, bạn không có quyền truy cập" Link="/login" TitleLink="Đăng nhập ngay!"/>
                </NotAuthorized>
                <Authorizing>
                    <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Trang không tồn tại!</PageTitle>
            <LayoutView Layout="@typeof(AppMainLayout)">
                <MessageError Title="Xin lỗi, trang này không tồn tại" Link="/" TitleLink="Quay lại trang chủ!"/>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>